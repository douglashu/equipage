/* pages/menu/menu.wxss */
.demand_item{
  text-align: center;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.demand_item>image{
  width: 40rpx;
  height: 50rpx;
}
.demand_item_content{
  box-sizing: border-box;
  width: 209rpx;
  height: 134rpx;
  margin: 0rpx;
  font-size: 24rpx;
  color: #676767;
  background: #FFFFFF;
  box-shadow: 4px 4px 6px 0 rgba(204,204,204,0.50);
  border-radius: 5px;
}
.active{
  color: #FD9153;
  border: 2rpx solid #FD9153; 
}
.demand_item_content image{
  padding-top: 40rpx;
  width: 40rpx;
  height: 50rpx;
}