/* pages/vehicle-submit/vehicle-submit.wxss */
.prompt{
  background: #F3F4F6;
  padding: 20rpx;
  font-size: 35rpx;
  color: #4A4C5B;
  letter-spacing: 0;
  text-align: center;
}
.form{
  padding: 20rpx 30rpx;
}
.name, .age, .plate_number, .tel, .brand, .location{
  font-size: 35rpx;
  padding: 10rpx 0;
  color: #676767;
  letter-spacing: 0;
}
.name input, .age>view, .plate_number input, .tel input, .brand view, .location view{
  padding-left: 25rpx;
  font-size: 30rpx;
  color: #909090;
  max-width: 80%;
}
.plate_number input{
  text-transform: uppercase;
}
.age_checkbox{
  font-size: 26rpx;
  color: #4A4C5B;
  letter-spacing: 0;
  padding: 3rpx 18rpx;
  border: 2rpx solid #4A4C5B;
  border-radius: 5px;
  margin-right: 40rpx;
}
.current{
  color: #FD9153;
  border: 2rpx solid #FD9153;
}
.btn{
  padding: 30rpx 40rpx;
}
.btn button{
  background: #4A4C5B;
  font-size: 35rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.button-hover[type="default"] {
  color: #fff;
  background-color:#4A4C5B;
}
button[loading][type="default"] {
  color: #fff;
  background-color:#4A4C5B;
}
.rescue_demand{
  padding: 20rpx;
  text-align: center;
}
.rescue_demand_title{
  font-size: 40rpx;
  color: #676767;
}
.demand_item{
  padding: 20rpx 0;
  margin: 0 13rpx;
}
.demand_item>image{
  width: 40rpx;
  height: 50rpx;
}
.demand_item_content{
  box-sizing: border-box;
  width: 209rpx;
  height: 134rpx;
  margin: 0rpx;
  font-size: 24rpx;
  color: #676767;
  background: #FFFFFF;
  box-shadow: 4px 4px 6px 0 rgba(204,204,204,0.50);
  border-radius: 5px;
}
.active{
  color: #FD9153;
  border: 2rpx solid #FD9153; 
}
.demand_item_content image{
  padding-top: 40rpx;
  width: 40rpx;
  height: 50rpx;
}
