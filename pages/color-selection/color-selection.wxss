/* pages/color-selection/color-selection.wxss */
page{
  background: #f3f4f6;
}
.color_selection{
  padding: 10rpx;
}
.color_list{
  justify-content: flex-start;
}
.bg_color{
  width: 100%;
  height: 153rpx;
}
.active{
  border: 1px solid #f90;
}
.color_item{
  width: 218rpx;
  box-sizing: border-box;
  height: 227rpx;
   box-shadow: 0 2px 4px 0 rgba(0,0,0,0.50);
   margin: 10rpx;
}
.text{
  font-size: 30rpx;
  color: #2D2D2D;
  letter-spacing: 0;
  padding: 16rpx 63rpx;
  background: #fff;
}
.btn_confirm{
  padding: 40rpx;
}
.btn_confirm button{
  background: #4A4C5B;
  font-size: 35rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.button-hover[type="default"] {
  color: #fff;
  background-color:#4A4C5B;
}